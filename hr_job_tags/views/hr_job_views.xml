<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_job_form_inherit_tags" model="ir.ui.view">
        <field name="name">hr.job.form.inherit.tags</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </xpath>
        </field>
    </record>
    <record id="view_hr_job_kanban_inherit_tags" model="ir.ui.view">
        <field name="name">hr.job.kanban.inherit.tags</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr_recruitment.view_hr_job_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="tag_ids"/>
            </xpath>
            <xpath expr="//div[hasclass('o_kanban_card_header')]" position="after">
                 <div class="row ms-1">
                    <div class="col-12">
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>